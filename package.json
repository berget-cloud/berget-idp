{
    "name": "berget-idp",
    "version": "0.1.0",
    "description": "Berget Identity Provider Theme",
    "homepage": "https://nima70.github.io/berget/storybook/",
    "repository": {
        "type": "git",
        "url": "git://github.com/keycloakify/berget.git"
    },
    "scripts": {
        "prestorybook": "keycloakify update-kc-gen && keycloakify copy-keycloak-resources-to-public",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build -o ./docs/storybook",
        "prestart": "npm run prestorybook",
        "start": "react-scripts start",
        "prebuild": "KEYCLOAKIFY_SKIP_PRETTIER=true keycloakify update-kc-gen",
        "build": "react-scripts build",
        "postbuild": "rimraf build/keycloak-resources",
        "build-keycloak-theme": "npm run build && keycloakify build",
        "format": "prettier . --write"
    },
    "keycloakify": {
        "accountThemeImplementation": "none",
        "projectBuildDirPath": "build",
        "staticDirPathInProjectBuildDirPath": "static",
        "publicDirPath": "public"
    },
    "license": "MIT",
    "keywords": [],
    "dependencies": {
        "@fontsource-variable/dm-sans": "^5.2.5",
        "@fontsource/dm-sans": "^5.2.5",
        "@fontsource/ovo": "^5.2.5",
        "@heroicons/react": "^2.1.5",
        "@radix-ui/react-checkbox": "^1.1.1",
        "@radix-ui/react-dropdown-menu": "^2.1.1",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-scroll-area": "^1.1.0",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@reduxjs/toolkit": "^2.2.7",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "keycloakify": "^11.8.22",
        "lucide-react": "^0.438.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.1.2",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^8.6.7",
        "@storybook/blocks": "^8.6.7",
        "@storybook/preset-create-react-app": "^8.6.7",
        "@storybook/react": "^8.6.7",
        "@storybook/react-webpack5": "^8.1.9",
        "@storybook/test": "^8.1.9",
        "@tailwindcss/typography": "^0.5.15",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "eslint-plugin-storybook": "^0.8.0",
        "prettier": "^3.2.5",
        "prop-types": "^15.8.1",
        "react-scripts": "5.0.1",
        "rimraf": "^5.0.5",
        "storybook": "^8.6.7",
        "typescript": "~5.1.6",
        "webpack": "^5.92.0"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "./.eslintrc.js"
        ],
        "rules": {
            "@typescript-eslint/no-redeclare": "off"
        },
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "browserslist": {
        "production": [
            "defaults",
            "not IE 11"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
